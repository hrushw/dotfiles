# Most keybinds are defaults
# Modified some for more vim-like behavior

goto_beginning gg
goto_end G

move_down j
move_up k
move_left h
move_right l

move_visual_mark_up k
move_visual_mark_down j

goto_left_smart ^
goto_right_smart $

next_chapter gc
prev_chapter gC

screen_down <C-d>
screen_up <C-u>

next_page J
previous_page K

open_document o
open_prev_doc O
open_document_embedded <C-o>
open_document_embedded_from_current_path <C-S-o>

search /
chapter_search c/

next_item n
previous_item N

open_link f
goto_toc t

command :
quit q

zoom_in  +
fit_to_page_width =
zoom_out -

rotate_clockwise r
rotate_counterclockwise R

# Alternatives
goto_beginning <home>
goto_end <end>

move_down           <down>
move_up             <up>
move_left           <right>
move_right          <left>

move_visual_mark_up <up>
move_visual_mark_down <down>

screen_down <pagedown>
screen_up <pageup>

next_page <C-<pagedown>>
previous_page <C-<pageup>>

search <C-f>
chapter_search c<C-f>

# Function keys
toggle_highlight <f1>
toggle_synctex <f4>
toggle_presentation_mode <f5>
toggle_mouse_drag_mode <f6>
toggle_visual_scroll <f7>
toggle_dark_mode <f8>
fit_to_page_width <f9>
fit_to_page_width_smart <f10>
toggle_fullscreen <f11>
toggle_window_configuration <f12>

