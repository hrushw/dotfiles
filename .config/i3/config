set $mod Mod4
floating_modifier $mod
tiling_drag modifier titlebar
tiling_drag swap_modifier Shift

title_align center
font pango:Terminus 16

bindsym $mod+Shift+q kill
bindsym $mod+r reload
bindsym $mod+Shift+r restart
bindsym $mod+Control+Shift+q exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -B 'Yes, exit i3' 'i3-msg exit'"

bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

bindsym $mod+Control+h resize shrink width 10 px or 10 ppt
bindsym $mod+Control+j resize grow height 10 px or 10 ppt
bindsym $mod+Control+k resize shrink height 10 px or 10 ppt
bindsym $mod+Control+l resize grow width 10 px or 10 ppt

bindsym $mod+v split vertical
bindsym $mod+Shift+v split horizontal
bindsym $mod+Control+v split toggle

bindsym $mod+m layout stacking
bindsym $mod+d layout tabbed
bindsym $mod+t layout toggle split

bindsym $mod+semicolon fullscreen toggle
bindsym $mod+space focus mode_toggle
bindsym $mod+Shift+space floating toggle

bindsym $mod+g focus child
bindsym $mod+Shift+g focus parent

set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"

bindsym $mod+1 workspace number $ws1
bindsym $mod+2 workspace number $ws2
bindsym $mod+3 workspace number $ws3
bindsym $mod+4 workspace number $ws4
bindsym $mod+5 workspace number $ws5
bindsym $mod+6 workspace number $ws6
bindsym $mod+7 workspace number $ws7
bindsym $mod+8 workspace number $ws8
bindsym $mod+9 workspace number $ws9

bindsym $mod+Shift+1 move container to workspace number $ws1
bindsym $mod+Shift+2 move container to workspace number $ws2
bindsym $mod+Shift+3 move container to workspace number $ws3
bindsym $mod+Shift+4 move container to workspace number $ws4
bindsym $mod+Shift+5 move container to workspace number $ws5
bindsym $mod+Shift+6 move container to workspace number $ws6
bindsym $mod+Shift+7 move container to workspace number $ws7
bindsym $mod+Shift+8 move container to workspace number $ws8
bindsym $mod+Shift+9 move container to workspace number $ws9

bindsym $mod+Shift+o move scratchpad
bindsym $mod+o scratchpad show

gaps outer -10
gaps inner 20

default_border normal 2
default_floating_border normal 8

exec --no-startup-id xss-lock --transfer-sleep-lock -- i3lock --nofork

bindsym $mod+w [instance="dropdown"] scratchpad show
exec --no-startup-id st -n dropdown
for_window [instance="dropdown"] move scratchpad
for_window [instance="dropdown"] resize set 80 ppt 40 ppt
for_window [instance="dropdown"] move position 10 ppt 0 ppt

bindsym $mod+Control+m [instance="musicplayer"] scratchpad show
exec --no-startup-id kitty --name musicplayer rmpc
for_window [instance="musicplayer"] move scratchpad
for_window [instance="musicplayer"] resize set 90 ppt 80 ppt
for_window [instance="musicplayer"] move position 5 ppt 10 ppt

bar {
        status_command i3status
}
