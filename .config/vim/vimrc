" Settings
set encoding=UTF-8

set viminfo='32,<256,:256,/256,%
set viminfofile=~/.local/state/vim/viminfo
set backupdir=./.vimbackup,~/.local/share/vim/backup,.,~/tmp,~/ " ??
set undodir=~/.local/share/vim/undo
set undofile
set history=4096
set noexrc
set secure

" ui options
set ruler
set number
set relativenumber
set cursorline
set shortmess=atToO
set wildmenu
set wildoptions=pum
set pumheight=32
set showcmd
set laststatus=2

" search options
set ignorecase
set smartcase
set hlsearch
set incsearch
set wrapscan

" Indentation options
set cindent
set autoindent
set noexpandtab
set smarttab
set tabstop=4
set shiftwidth=4
set softtabstop=4

" Behavior
" if exists("+autochdir") | set autochdir | endif
set autoread
set noautoshelldir
set noautowrite
set noautowriteall

set backspace=indent,eol,start

" Options without 'set'
syntax on
nohlsearch

" Colorscheme
set termguicolors
set background=dark

runtime maps.vim
runtime plugins.vim

" Load plugins
runtime ftplugin/man.vim
let g:no_man_maps = 1
let g:ft_man_open_mode = 'tab'

" c syntax file does not handle struct compound literals as function arguments
au FileType c set syntax=cpp
