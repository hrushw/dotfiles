#!/usr/bin/env bash

scan_format="%4n | %10d |%t %24f :  %2i%s"
mail_list() {
	mscan -f "$scan_format" 2>/dev/null
}

mail_process() {
	mlist $(mdirs) |
	msort -d |
	mthread |
	mseq -S &> /dev/null
}

mail_select() {
	mail_list |
	tac |
	fzf |
	awk '{print $1}'
}

mail_view() {
	case "$1" in
		"inline")
			viewcmd="mshow ${@:2} | mcolor"
			eval "$viewcmd";;
		*)
			viewcmd="mshow $@ | mcolor"
			kitten @launch sh -c "export NOHEADER=1; $viewcmd; kitten @action scroll_home; bash" &>/dev/null;;
	esac
}

# exit code is required for mblaze to use raw image output
mail_img_show() {
	maxsize=400x1280
	magick - -resize "$maxsize"  - | kitten icat --align left --transfer-mode="stream" --unicode-placeholder
	exit 62
}

mail_read() {
	# step 1: read
	case $1 in
		"inline")
			set -- "${@:2}"
			viewcmd="mail_view inline";;
		*)
			viewcmd="mail_view";;
	esac

	case $1 in
		"")
			index=$(mail_select);;
		"grep")
			index=$(mail_grep ${@:2} | tac | fzf | awk '{print $1}');;
	esac

	case $index in
		"")
			echo "Selection failed";;
		*)
			eval "$viewcmd $index";;
	esac
}

mail_extract() {
	case $1 in
		"")
			index=$(mscan -f "%c %n" | grep ">" | awk '{print $2}');;
		*)
			index=$1;;
	esac

	mshow -t $index |
	tail -n +2 |
	sed 's/^ *//' |
	awk '{print $1}' |
	rev |
	cut -c 2- |
	rev |
	xargs mshow -x $index
}

mail_grep() {
	pattern='subject =~~ "'$1'" || from =~~ "'$1'" || to =~~ "'$1'"'
	mpick -t "$pattern" | mail_list
}

cmdout() {
	case "$1" in
		"file")
			eval "${@:3}" >> $2;;
		"stdout")
			eval "${@:2}";;
		"both")
			eval "${@:2}" | tee $2;;
	esac
}

synclogfile=$XDG_CACHE_HOME/offlineimap.log
mail_sync() {
	{ date; echo; } &>> $synclogfile

	if offlineimap &>> $synclogfile; then
		notify-send -t 10000 "Email synced successfully!"
	else
		notify-send "ERROR: Email sync failed!"
	fi

	{ echo; mail_process; } &>> $synclogfile
	{ echo -e "\n"; } >> $synclogfile
}

mail_sync_bg() {
	while true; do
		snooze -H* -M/10
		mail_sync
	done
}

case $1 in
	"list")
		mail_list;;
	"process")
		mail_process;;
	"select")
		mail_select;;
	"read")
		mail_read "${@:2}";;
	"extract")
		mail_extract "${@:2}";;
	"grep")
		mail_grep "${@:2}";;
	"view")
		mail_view "${@:2}";;
	"imgshow")
		mail_img_show "${@:2}";;
	"sync")
		mail_sync 1;;
	"syncd" | "sync_daemon" | "syncdaemon")
		mail_sync_bg &>/dev/null &;;
	*)
		echo "Invalid Command!";;
esac


